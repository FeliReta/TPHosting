body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    line-height: 1.6;
}

.container {
    width: 90%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
}

nav ul {
    list-style: none;
    padding: 0;
    display: flex;
    justify-content: space-around;
    background: #333;
    margin-bottom: 20px;
}

nav ul li {
    display: inline;
}

nav ul li a {
    text-decoration: none;
    color: white;
    padding: 10px 20px;
    display: block;
}

nav ul li a:hover {
    background: #575757;
}

h1, h2, p {
    text-align: center;
}

img {
    max-width: 100%; /* Ensures the image never exceeds its container's width */
    height: auto;    /* Maintains aspect ratio */
    display: block;  /* Prevents inline gaps */
    margin: 0 auto;  /* Centers the image horizontally */
}

.flash-messages {
    background-color: #4CAF50;
    color: white;
    padding: 15px;
    margin: 20px 0;
    border-radius: 5px;
    text-align: center;
}

body, html {
    height: 100%;
    margin: 0;
    font-family: Arial, sans-serif;
}

.container {
    min-height: calc(100vh - 60px); /* Adjust this value based on your header height */
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

footer {
    background-color: #333;
    color: #fff;
    text-align: center;
    padding: 10px 0;
    width: 100%; /* Ensures that the footer does not overflow */
    box-sizing: border-box;
}

.footer-bar {
    max-width: 1200px; /* Adjust as needed based on your page layout */
    margin: 0 auto; /* Centers the content horizontally */
}

.footer-bar a {
    color: #fff;
    text-decoration: none;
    margin: 0 10px;
}

.footer-bar span {
    font-size: 12px;
    color: #ccc;
}